@model Team
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Yeni Üye Ekle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YoneticiEkip" asp-action="Ekle" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">

                    <div class="form-group">
                        <br />
                        <label>Üye Ad Soyad</label>
                        <input type="text" class="form-control kontrol" asp-for="NameSurname" placeholder="Üye Adını Giriniz..." required>
                    </div>

                    <div class="form-group">
                        <label>Üye Takım</label>
                        <select class="form-control" asp-for="TeamName">
                            <option>Elektronik</option>
                            <option>Mekanik</option>
                            <option>Yazılım</option>
                            <option>Akademisyen</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Linkedin Hesabı</label>
                        <input type="text" class="form-control kontrol" asp-for="Linkedin" value="https://www.linkedin.com/" required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Twitter Hesabı</label>
                        <input type="text" class="form-control kontrol" asp-for="Twitter" value="https://twitter.com/" required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Instagram Hesabı</label>
                        <input type="text" class="form-control kontrol" asp-for="Instagram" value="https://www.instagram.com/" required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Github Hesabı</label>
                        <input type="text" class="form-control kontrol" asp-for="Github" value="http://github.com/" required>
                    </div>


                    <div class="form-group">
                        <label class="control-label mb-1">Üye Fotoğraf</label>
                        <input class="form-control" type="file" name="Image" />
                    </div>


                    <center><button type="submit" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Üye Ekle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>

