@model News
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Haber Güncelle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YoneticiHaber" asp-action="Guncelle" asp-route-Id="@Model.Id" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">

                    <div class="form-group">
                        <br />
                        <label>Haber Başlık</label>
                        <input type="text" class="form-control kontrol" asp-for="Title" value="@Model.Title" required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Haber Yazar</label>
                        <input type="text" class="form-control kontrol" asp-for="Author" value="@Model.Author" required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Haber Eklenme Tarihi</label>
                        <input type="text" class="form-control kontrol" asp-for="Date" value="@Model.Date" required>
                    </div>

                    <div class="form-group">
                        <label class="control-label mb-1">Aktif Fotoğraf</label>
                        <center><img src="~/Haberler/@Model.Photo" width="250" /></center>
                    </div>
                    <div class="form-group">
                        <label class="control-label mb-1">Yeni Haber Fotoğraf</label>
                        <input class="form-control" type="file" name="Image" />
                    </div>

                    <div class="form-group">
                        <label class="control-label mb-1">Haber İçerik</label>
                        <textarea class="form-control" asp-for="Content" rows="8" required>
                            @Model.Content
                        </textarea>
                    </div>

                    <center><button type="submit" class="btn btn-success"><i class="fa fa-wrench" aria-hidden="true"></i> Haber Güncelle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>
