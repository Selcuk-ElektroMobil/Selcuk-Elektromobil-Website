@model IEnumerable<Gallery>
@{
    ViewData["Title"] = "Galeri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div style="background-color:#2c3e50;height:250px;" data-aos="fade" id="home-section">
    <div class="container-fluid" style="top: 60%;position: absolute;transform: translateY(-50%);-ms-transform: translateY(-50%);">
        <center><h1 style="color:#fff">Galeri</h1></center>
    </div>
</div>

<section class="site-section bg-light" data-aos="fade">


    <div class="container">

        <div id="posts" class="row no-gutter">

            @foreach (var item in Model)
            {
                <div class="item web col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-4">
                    <a href="~/Galeri/@item.Photo" class="item-wrap fancybox">
                        <span class="icon-search2"></span>
                        <img class="img-fluid" src="~/Galeri/@item.Photo">
                    </a>
                </div>
            }

        </div>
    </div>

</section>


