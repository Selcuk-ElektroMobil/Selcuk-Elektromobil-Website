@model News
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Yeni Haber Ekle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YoneticiHaber" asp-action="Ekle" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">

                    <div class="form-group">
                        <br />
                        <label>Haber Başlık</label>
                        <input type="text" class="form-control kontrol" asp-for="Title" placeholder="Haber Başlığını Giriniz..." required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Haber Yazar</label>
                        <input type="text" class="form-control kontrol" asp-for="Author" placeholder="Haber Yazarını Giriniz..." required>
                    </div>

                    <div class="form-group">
                        <br />
                        <label>Haber Eklenme Tarihi</label>
                        <input type="text" class="form-control kontrol" asp-for="Date" value="@DateTime.Now.ToShortDateString()" required>
                    </div>

                    <div class="form-group">
                        <label class="control-label mb-1">Haber Fotoğraf</label>
                        <input class="form-control" type="file" name="Image" />
                    </div>

                    <div class="form-group">
                        <label class="control-label mb-1">Haber İçerik</label>
                        <textarea class="form-control" asp-for="Content" rows="8" required>
                        
                        </textarea>
                    </div>

                    <center><button type="submit" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Haber Ekle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>
