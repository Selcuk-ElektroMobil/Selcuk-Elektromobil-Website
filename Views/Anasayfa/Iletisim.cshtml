
@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div style="background-color:#2c3e50;height:250px;" data-aos="fade" id="home-section">
    <div class="container-fluid" style="top: 60%;position: absolute;transform: translateY(-50%);-ms-transform: translateY(-50%);">
        <center><h1 style="color:#fff">İletişim</h1></center>
    </div>
</div>

<section class="site-section bg-light" id="contact-section" data-aos="fade">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">Bizimle İletişim Kur</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-5">



                <form action="#" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">İletişim Formu</h2>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">İsim</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Soyisim</label>
                            <input type="text" id="lname" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Mail Adresi</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="subject">Başlık</label>
                            <input type="subject" id="subject" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">Mesajınız</label>
                            <textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="Mesajınızı Buraya Yazabilirsiniz..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>


                </form>
            </div>

        </div>
        <div class="row mb-5">
            <div class="col-md-4 text-center">
                <p class="mb-4">
                    <span class="icon-room d-block h2 text-primary"></span>
                    <span>Teknoloji Fakültesi, Selçuk Üniversitesi  Selçuklu/Konya</span>
                </p>
            </div>
            <div class="col-md-4 text-center">
                <p class="mb-4">
                    <span class="icon-phone d-block h2 text-primary"></span>
                    <a href="#">+1 232 3235 324</a>
                </p>
            </div>
            <div class="col-md-4 text-center">
                <p class="mb-0">
                    <span class="icon-mail_outline d-block h2 text-primary"></span>
                    <a href="#">iletisim@selcukelektromobil.com</a>
                </p>
            </div>
        </div>
    </div>
</section>


